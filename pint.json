{
    "cache-file": ".pint.cache",
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal"
            }
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "declare_strict_types": true,
        "single_line_empty_body" : false
    }
}
